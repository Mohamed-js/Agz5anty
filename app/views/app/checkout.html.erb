<%= form_with url: "/new_order", method: :post  do |form| %>

<div class="field ar">
    <%= form.label "المدينة" %>
    <%= form.select :address_id, options_for_select([1]), class:"form-control", required:true %>
</div>

<div class="field ar">
    <%= form.label "الموقع" %>
    <%= form.text_field :geocode, value: "31.14371,30.12427", class:"form-control", required:true %>
</div>

<div class="field ar">
    <%= form.label "رقم الهاتف" %>
    <%= form.text_field :phone, class:"form-control", minlength:11, required:true %>
</div>

<div class="field ar">
    <%= form.label "رقم هاتف احتياطي (اختياري)" %>
    <%= form.text_field :phone2, class:"form-control" %>
</div>

<div class="field ar">
    <%= form.label "ملاحظات" %>
    <%= form.text_area :notes , style: "width: 100%; min-height:100px;" %>
</div>

<div class="field ar">
    <%= form.submit 'اطلب', class:'form-control btn-success' %>
</div>

<% end %>
