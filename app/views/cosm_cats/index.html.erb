<p id="notice"><%= notice %></p>

<h1>Cosm Cats</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Img</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cosm_cats.each do |cosm_cat| %>
      <tr>
        <td><%= cosm_cat.name %></td>
        <td><%= image_tag cosm_cat.image_url if cosm_cat.image %></td>
        <td><%= link_to 'Show', cosm_cat %></td>
        <td><%= link_to 'Edit', edit_cosm_cat_path(cosm_cat) %></td>
        <td><%= link_to 'Destroy', cosm_cat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cosm Cat', new_cosm_cat_path %>
