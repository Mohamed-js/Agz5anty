<div class="container max-width3 meds">
    <% @cosm_meds.each do |medication| %>
    <%= link_to cosm_med_path(medication.id), class:"card-link m-auto" do %>
    <div class="card card3 en">
        <div class="p-1 pb-0 product-img ">
            <%= image_tag medication.image_url if medication.image %>
        </div>
        <div class="product-info p-2 pt-0">
            <h6 class="card-title mb-2"><b><%= medication.name %></b></h6>
            <span class="card-text bg-warning px-1 rounded"><%= medication.price %> EGP</span>
        </div>
    </div>
    <% end %>
    <% end %>
</div>
