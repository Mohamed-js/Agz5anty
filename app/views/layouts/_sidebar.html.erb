<div class="p-4 h-100 sidebar" id="sidebar">

    <a id="sidebar-toggler" class="btn sidebar-toggle p-3"><i class="fa fa-plus"></i></a>

    <ul>
        <li class="p-2">
            <%= link_to "Home", root_path %>
        </li>
        <li class="p-2">
            <%= link_to "Profile", root_path %>
        </li>   
        <li class="p-2">
            <% if !user_signed_in? %>
                <%= button_to "Login", new_user_session_path, class: "btn btn-outline-success p-1 ", method: "get"%>
            <% else %>  
                <%= button_to "Logout", destroy_user_session_path, class: "btn btn-outline-success p-1 ", method: "delete"%>
            <% end %> 
        </li>
    </ul>
</div>