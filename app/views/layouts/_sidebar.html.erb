<div class="p-4 h-100 sidebar" id="sidebar">

    <br><br><br>

    <ul>
        <li class="p-2">
            <%= link_to "Home", root_path %>
        </li>
        <li class="p-2">
            <%= link_to "Profile", root_path %>
        </li>   
        <li class="p-2">
            <% if !user_signed_in? %>
                <%= button_to "Login", new_user_session_path, class: "btn btn-outline-success p-1 ", method: "get"%>
