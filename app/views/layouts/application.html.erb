<!DOCTYPE html>
<html>
  <head>
    <title>Agz5anty</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "https://pro.fontawesome.com/releases/v5.10.0/css/all.css" %>
    <%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render "layouts/navbar" %>
    <% if notice %>
      <p class="alert alert-success m-0"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger m-0"><%= alert %></p>
    <% end %>
    
    

    <div class= "position-relative">
      <%= render "layouts/sidebar" %>
      <%= yield %>
    </div>


    <%= render "layouts/bottombar" %>

    <%= javascript_pack_tag 'js', 'data-turbolinks-track': 'reload' %>
  </body>
</html>
